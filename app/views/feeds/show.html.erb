<p id="notice"><%= notice %></p>

<h1>Show</h1>

<table>
  <tr>
    <td><%= @feed.user.user_name %></td>
    <td><%= image_tag "#{@feed.image}" %></td>
    <td><%= @feed.content %></td>
    <td>
      <% unless @feed.user_id == current_user.id %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </td>
    <td>
      <% if @feed.user_id == current_user.id %>
        <%= link_to 'Edit', edit_feed_path(@feed) %>
        <%= link_to 'Destroy', @feed, method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to '投稿一覧へ', feeds_path %>
