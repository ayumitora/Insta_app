<% if @user.id == current_user.id %>
  <h1><%= @user.user_name %>のページ</h1>

  <p>メールアドレス: <%= @user.email %></p>

  <p>プロフィール: <%= @user.profile %></p>
  <%= link_to "ユーザー情報を編集する", edit_user_path(@user) %>
  <%= link_to "ユーザーを削除する", @user, method: :delete, data: {confirm: 'Are you sure?'} %>
  <%= link_to '投稿一覧へ', feeds_path %>
<% else %>
  <h4>他ユーザーのページです。表示できません。</h4>
<% end %>